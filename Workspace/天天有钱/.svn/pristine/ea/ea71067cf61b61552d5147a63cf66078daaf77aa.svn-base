<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>Hello APP</title>
    <link rel="stylesheet" type="text/css" href="./css/api.css" />
    <link rel="stylesheet" type="text/css" href="./css/common.css" />
    <style type="text/css">
        *{
            margin: 0;
            padding: 0;
        }
        body{
            font-family: Arial;
            background-color: #EFEFF2;
        }
        #header{
            width: 100%;
            height: 15%;
            background: #1A8CFF;
        }
        #content{
            width: 100%;
            height: 35%;
            background: #fff;
        }
        #content .fonts_info{
            width: 100%;
            height: 70px;
            line-height: 70px;
            
        }
        #content .fonts_info .plan1{
            font-size: 16px;
            display: block;
            color: #666;
            float: left;
            padding-left: 12px;
        }
        #content .fonts_info .plan2{
            font-size: 14px;
            display: block;
            color: #999;
            float: right;
            padding-right: 12px;
        }
        #content .howMoney{
            height: 16px;
        }
        #content .howMoney .mubs{
            display: block;
            height: 16px;
            line-height: 16px;
            font-size: 16px;
            color: #666;
            float: left;
            text-indent: 50%;
        }
        #content .howMoney .yuan{
            display: block;
            height: 16px;
            line-height: 16px;
            font-size: 14px;
            color: #999;
            float: left;
            padding-left: 8px;
        }
        #content .huakuai{
            width: 100%;
            height: 30px;
            line-height: 25px;
            text-align: center;
        }
        #content .huakuai .icons{
            width: 30px;
            height: 30px;
            display: block;
            border-radius: 50%;
            border: 1px solid #333;
            float: left;
            margin-left: 12px;
        }
        #content .huakuai .icons2{
            width: 30px;
            height: 30px;
            display: block;
            border-radius: 50%;
            border: 1px solid #333;
            float: right;
            margin-right: 12px;
        }
        input[type="range"] {
                        background-color: #0DA4FF;
                        width: 50%;
                        -webkit-appearance: none;
                        height:4px;
                    }
                    input[type="range"]::-webkit-slider-thumb {
                        -webkit-appearance: none;
                        cursor: pointer;
                        height: 14px;
                        width: 14px;
                        vertical-align: middle;
                        transform: translateY(-4px);
                        background: none repeat scroll 0 0 #0DA4FF;
                        border-radius: 50%;
                    }
        #rangs{
            position: relative;
        }
        #content_2{
            width: 100%;
            height: 35%;
            background: #fff;
            margin-top: 10px;
        }
        #content_2 .fonts_info_2{
            width: 100%;
            height: 70px;
            line-height: 70px;
            
        }
        #content_2 .fonts_info_2 .plan1_2{
            font-size: 16px;
            display: block;
            color: #666;
            float: left;
            padding-left: 12px;
        }
        #content_2 .fonts_info_2 .plan2_2{
            font-size: 14px;
            display: block;
            color: #999;
            float: right;
            padding-right: 12px;
        }
        #content_2 .howMoney_2{
            height: 16px;
        }
        #content_2 .howMoney_2 .mubs_2{
            display: block;
            height: 16px;
            line-height: 16px;
            font-size: 16px;
            color: #666;
            float: left;
            text-indent: 50%;
        }
        #content_2 .howMoney_2 .yuan_2{
            display: block;
            height: 16px;
            line-height: 16px;
            font-size: 14px;
            color: #999;
            float: left;
            padding-left: 8px;
        }
        #content_2 .huakuai_2{
            width: 100%;
            height: 30px;
            line-height: 25px;
            text-align: center;
        }
        #content_2 .huakuai_2 .icons_2{
            width: 30px;
            height: 30px;
            display: block;
            border-radius: 50%;
            border: 1px solid #333;
            float: left;
            margin-left: 12px;
        }
        #content_2 .huakuai_2 .icons2_2{
            width: 30px;
            height: 30px;
            display: block;
            border-radius: 50%;
            border: 1px solid #333;
            float: right;
            margin-right: 12px;
        }
        input[type="range"] {
                        background-color: #0DA4FF;
                        width: 50%;
                        -webkit-appearance: none;
                        height:4px;
                    }
                    input[type="range"]::-webkit-slider-thumb {
                        -webkit-appearance: none;
                        cursor: pointer;
                        height: 14px;
                        width: 14px;
                        transform: translateY(-4px);
                        background: none repeat scroll 0 0 #0DA4FF;
                        border-radius: 50%;
                    }
        #rangs_2{
            position: relative;
        }
        #content_3{
            width: 100%;
            height: 20%;
            border: 1px solid red;
        }
        #content_3 .center_1{
            border: 1px solid red;
            height: 30px;
        }
    </style>
</head>
<body>
    <div id="header"></div>

        <div id="content">
            <p class="fonts_info">
                <span class="plan1">您计划借多少钱</span>
                <span class="plan2">最高可借8000元</span>
            </p>
            <p class="howMoney">
                <span class="mubs">6000</span>
                <span class="yuan">元</span>
            </p>
            <p class="huakuai">
                <span class="icons"></span>
                <input id="rangs" type="range" />
                <span class="icons2"></span>
            </p>
            <span class="num_300" style="font-size:12px;color:#999;position:absolute;left:25%;">300</span>
            <span class="num_8000" style="font-size:12px;color:#999;position:absolute;right:25%;">8000</span>
        </div>
        <!-- 2 -->
        <div id="content_2">
            <p class="fonts_info_2">
                <span class="plan1_2">您计划分期多久</span>
                <span class="plan2_2">最多可分12期</span>
            </p>
            <p class="howMoney_2">
                <span class="mubs_2">6</span>
                <span class="yuan_2">期</span>
            </p>
            <p class="huakuai_2">
                <span class="icons_2"></span>
                <input id="rangs_2" type="range" />
                <span class="icons2_2"></span>
            </p>
            <span class="num_300_2" style="font-size:12px;color:#999;position:absolute;left:25%;">1</span>
            <span class="num_8000_2" style="font-size:12px;color:#999;position:absolute;right:25%;">12</span>
        </div>
        <!-- 3 -->
        <p class="moyinfo" style="height:6%;line-height:24px;">
            <span style="font-size:12px;color:#999;padding-left:12px;">还款详情</span>
        </p>
        <div id="content_3">
            <div class="center_1">
                <span style="dispaly:block;width:30px;height:30px;border-radius:50%;border:1px solid red;"></span>
            </div>
            <div class="center_2"></div>
        </div>
</body>
<script type="text/javascript" src="./script/api.js"></script>
<script type="text/javascript">

    apiready = function(){
		console.log("Hello APICloud");

        var header = $api.byId('header');
        $api.fixStatusBar(header); 
        var headerPos = $api.offset(header);
        var main = $api.byId('main');
        var mainPos = $api.offset(main);

        api.openFrame({
            name: 'main',
            url: 'html/main.html',
            bounces: true,
            rect: {
                x: 0,
                y: headerPos.h,
                w: headerPos.w,
                h: mainPos.h
            }
        });
    };
</script>
<script type="text/javascript">
    var rangsDom = document.getElementById("rangs");
    rangsDom.value = 60;
</script>
</html>