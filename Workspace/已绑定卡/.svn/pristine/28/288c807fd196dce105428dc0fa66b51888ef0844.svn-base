			<div class="line01 yi" tapmode="active">1</div>
			<div class="line01 er" tapmode="active">2</div>
			<div class="line01 san" tapmode="active" style="border-right:0;">3</div>
		</div>

		<div class="twoboard">
			<div class="line02 si" tapmode="active">4</div>
			<div class="line02 wu" tapmode="active">5</div>
			<div class="line02 liu" style="border-right:0;" tapmode="active">6</div>
		</div>

		<div class="threeboard">
			<div class="line03 qi" tapmode="active">7</div>
			<div class="line03 ba" tapmode="active">8</div>
			<div class="line03 jiu" style="border-right:0;" tapmode="active">9</div>
		</div>

