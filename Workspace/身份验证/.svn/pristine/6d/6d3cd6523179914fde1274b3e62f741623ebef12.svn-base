<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>Hello APP</title>
    <style type="text/css">
    	*{
    		margin: 0;
    		padding: 0;
    	}
    	body{
    		font-size: 12px;
    		font-family: "微软雅黑";
    		background: rgb(129,204,231);
    		height: 100%;
    		overflow: hidden;
    	}
    	.content{
    		-webkit-transition: all ease-in-out 1s;
    	}
    	.cnts{
    		margin: 3% 20px 0 20px;
    		background: #fff;
    		border-radius: 16px;
    		height: 300px;
    		box-shadow: 1px 1px 8px 1px #666666;
    	}
    	.flag{
    		margin: 10px 0 0 0;
    		width: 100px;
    		height: 35px;
    		float: left;
    	}
    	.friends{
    		float: left;
    		margin: 18px 0 0 0;
    		font-size: 16px;
    		color: #666;
    		padding-left: calc(50% - 32px - 100px);
    	}
    	.cosal{
    		width: calc(100%; - 20px);
    		height: 50px;
    		padding: 20px 20px 0 20px;
    	}
    	.co_fonts{
    		display: block;
    		word-break: break-word;
    		text-indent: 40px;
    	}
    	.content2{
    		position: absolute;
    		bottom: -42%;
    		left: 5%;
    		width: 90%;
    		margin: 0 auto;
    		z-index: 999;
    	}
    	.content3{
    		position: absolute;
    		bottom: -22%;
    		
    		left: 10%;
    		width: 80%;
    	}
    	.content4{
    		position: absolute;
    		bottom: -32%;
    		
    		left: 7.5%;
    		width: 85%;
    		z-index: 998;
    	}
    </style>
</head>
<body>
	<div style="border:1px solid red;">
		<div class="content" style="width: 90%;margin: 0 auto;">
   		<div class="cnts">
   			<div class="flag">
   				<img src="image/pinks.png" alt="pink" width="100" height="35" />
   			</div>
   			<p class="friends">我的伙伴</p>
   		</div>
   </div>
   <!----------------------->
   <div class="cosal">
   	<span class="co_fonts">textindent40pxXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX</span>
   </div>
   
   <!------------------------------>
   <div class="content content2" onclick="content2();">
   		<div class="cnts" >
   			<div class="flag">
   				<img src="image/blues.png" alt="blues" width="100" height="35" />
   			</div>
   			<p class="friends">证件信息</p>
   		</div>
   </div>
   <!------------------------------>
   <div class="content content3">
   		<div class="cnts">
   			<div class="flag">
   				<img src="image/greens.png" alt="greens" width="100" height="35" />
   			</div>
   			<p class="friends">个人资料</p>
   		</div>
   </div>
   <!------------------------------>
   <div class="content content4">
   		<div class="cnts">
   			<div class="flag">
   				<img src="image/yellows.png" alt="yellows" width="100" height="35" />
   			</div>
   			<p class="friends">学校信息</p>
   		</div>
   </div>
	</div>
   
   
   
   
   
</body>
<script type="text/javascript" src="./script/api.js"></script>
<script type="text/javascript">
	document.body.offsetHeight = 785;
	function content2(){
		var content2Dom = $api.dom(".content2");
		content2Dom.style.bottom = "5%";

		

		
		
		
	}
</script>
</html>