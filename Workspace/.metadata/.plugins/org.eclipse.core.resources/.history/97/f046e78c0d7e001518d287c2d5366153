	<script>
		apiready = function() {
			api.setRefreshHeaderInfo({
				visible : true,
				loadingImg : 'widget://image/rexhang_new.png',
				bgColor : '#333',
				textColor : '#fff',
				textDown : '下拉刷新...',
				textUp : '松开开始刷新...',
				showTime : true
			}, function(ret, err) {
				//从服务器加载数据，完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
				function ss() {
					api.refreshHeaderLoadDone();
					api.toast({
						msg : '刷新成功',
						duration : 1000,
						location : 'bottom'
					});
				};
				setTimeout(ss, 500);
			});
		};
	</script>
