	<script type="text/javascript" src="../script/api.js" ></script>
	<script type="text/javascript" src="../script/aui-alert.js" ></script>
	<script type="text/javascript">
		apiready = function() {
			api.parseTapmode();
			api.setRefreshHeaderInfo({
				visible : true,
				loadingImg : 'widget://image/rexhang_new.png',
				bgColor : '#000',
				textColor : '#fff',
				textDown : '下拉刷新...',
				textUp : '松开开始刷新...',
				showTime : true
			}, function(ret, err) {
				//从服务器加载数据，完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
				function ss() {
					api.refreshHeaderLoadDone();
					api.toast({
						msg : '恭喜你！刷新成功了噢！',
						duration : 1000,
						location : 'bottom'
					});
				};
				setTimeout(ss, 600);
			});
		}
		function openWin(name) {
			api.openWin({
				name : '' + name + '',
				url : '' + name + '_win.html',
				bounces : false,
				delay : 300,
				animation : {
					type : "movein", //动画类型（详见动画类型常量）
					subType : "from_right",
					duration : 300
				}
			});
		};
		function alertCustom () {
        var html = '';
            html += '<div style="width:60px; height:60px;float:left; padding-right:15px;"><img src="../image/rexhang_new.png" style="width:100%;border-radius:6px;" /></div>';
            html += '<div><p>下拉页面可以刷新当前页面噢！</p><p>赶快试试看吧！</p></div>';
        $aui.alert({
            title:'收到来自开发者的消息',
            content:html,
            buttons:['确认','关闭'],
            radius:10,
            titleColor:'#333',
            contColor:'#333',
            btnColor:'#5B1DEC'
        },function(ret){
            //处理回调函数
            if(ret){
               if(ret==0){
					api.alert({
						title:'您的点击事件',
						msg:'您点击了确认'
					});
                }else{
                 	 api.alert({
						title:'您的点击事件',
						msg:'您点击了取消'
					});
                }
            }
        })
    }
	</script>
