	<script type="text/javascript" src="../script/api.js" ></script>
	<script type="text/javascript">
		apiready = function() {
			api.parseTapmode();
			api.setRefreshHeaderInfo({
				visible : true,
				loadingImg : 'widget://image/rexhang_new.png',
				bgColor : '#ccc',
				textColor : '#fff',
				textDown : '下拉刷新...',
				textUp : '松开开始刷新...',
				showTime : true
			}, function(ret, err) {
				//从服务器加载数据，完成后调用api.refreshHeaderLoadDone()方法恢复组件到默认状态
				function ss() {
					api.refreshHeaderLoadDone();
					api.toast({
						msg : '恭喜你！刷新成功了噢！',
						duration : 1000,
						location : 'bottom'
					});
				};
				setTimeout(ss, 600);
			});		
		}
		function openWin(name) {
			api.openWin({
				name : ''+ name +'',
				url : '' + name + '_win.html',
				bounces : false,
				delay : 300,
				animation : {
					type : "movein", //动画类型（详见动画类型常量）
					subType : "from_right",
					duration : 300
				}
			});
		}

	</script>
