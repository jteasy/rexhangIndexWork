	<script type="text/javascript" src="../script/api.js"></script>
	<script type="text/javascript">
		apiready = function() {
		};
		/*退出app*/
		function exit_app() {
			api.confirm({
				title : '您确定要这么做吗',
				msg : '确认退出程序吗',
				buttons : ['嗯', '不，我点错了']
			}, function(ret, err) {
				if (ret.buttonIndex == 1) {
					api.closeWidget({
						id : 'A0000000000001',
						retData : {
							name : 'closeWidget'
						},
						animation : {
							type : 'flip',
							subType : 'from_bottom',
							duration : 1000
						},
						silent : true
					});
				} else {
					api.alert({
						msg : "感谢您没点击确定"
					});
				}
			});
		}

		function openContacks() {
			api.confirm({
				title : '您确定要这么做吗',
				msg : '确认回到首页吗',
				buttons : ['嗯', '不，我点错了']
			}, function(ret, err) {
				if (ret.buttonIndex == 1) {
					api.closeToWin({
						name : 'root',
						animation : {
							type : 'flip',
							subType : 'from_bottom',
							duration : 500
						}
					});
				} else {
					api.alert({
						msg : "嗯，您取消了"
					});
				}
			});
		};
		function perSon() {
			api.addEventListener({
				name : 'batterystatus'
			}, function(ret, err) {
				api.alert({
					msg : '目前您的设备还有' + ret.level + '%的电量'
				});
			});
		};
		function onlines() {
			var connectionType = api.connectionType;
			api.alert({
				msg : '您当前的网络接入类型为：' + connectionType
			});
		};
		function shake() {
			api.addEventListener({
				name : 'shake'
			}, function(ret, err) {
				api.alert({
					msg : '摇摇更健康！'
				});
			});
		};
		function right_cle() {
			//右轻扫
			api.addEventListener({
				name : 'swiperight'
			}, function(ret, err) {
				api.toast({
					msg : '右扫了一下'
				});
			});
		};
		function appinfo() {
			var appId = api.appId;
			var appName = api.appName;
			var appVersion = api.appVersion;
			var systemType = api.systemType;
			var systemVersion = api.systemVersion;
			var deviceName = api.deviceName;
			var screenWidth = api.screenWidth;
			var screenHeight = api.screenHeight;
			var cacheDir = api.cacheDir;
			api.alert({
				title : '以下是您的设备信息',
				msg : 'appID为：' + appId + '|||app名称为：' + appName + '|||app版本为：' + appVersion + '|||系统类型为：' + systemType + '|||系统版本为：' + systemVersion + '|||设备名称为：' + deviceName + '手机' + '|||设备分辨率为：' + screenWidth + 'x' + screenHeight + '|||缓存路径为：' + cacheDir,
				buttons : ['嗯，对的']
			});
		};
	</script>
	<script>
		function openWin(name) {
			api.openWin({
				name : '' + name + '',
				url : '' + name + '_win.html',
				bounces : false,
				delay : 300,
				animation : {
					type : "movein", //动画类型（详见动画类型常量）
					subType : "from_right",
					duration : 300
				}
			});
		};
	</script>
	<script>
		function contack() {
			var contact = api.require('contact');
			contact.queryContact({
			}, function(ret, err) {
				if (ret.status) {
					var array = ret.contacts;
					var first = array[0];
					var arrayPho = first.phones;
					var firstnum = arrayPho[0];
					var secondnum = arrayPho[1];
					var thirdnum = arrayPho[2];
					api.alert({
						msg : array
					});
				} else {
					api.alert({
						msg : '获取失败'
					});
				}
			});
		}
	</script>
