    <script type="text/javascript" src="../script/api.js"></script>
	<script type="text/javascript">
	
	/**
	 * 点击打开天天有钱页面
	 */
	var openHaveMoney=function(){
		api.openWin({
	        name: 'index_havemoney_header',
	        url: 'index/havemoney_header.html',
	        bgcolor:'#ffffff',
	        scrollToTop:true,
	        animation:{
	        	type:"movein",                //动画类型（详见动画类型常量）
			    subType:"from_right",       //动画子类型（详见动画子类型常量）
			    duration:300
	        }
        });
	}
</script>
<script type="text/javascript" src="../script/zepto.min.js"></script>
<script type="text/javascript">
	$(function(){
		 window.onscroll = function(){
		 	/*http://www.stepday.com/topic/?253*/
		 	/*获取scrollBottom*/
		 	scrollTop = document.documentElement.scrollTop || document.body.scrollTop;
		 	var dh = document.body.scrollHeight;
		 	var dh2 = document.body.clientHeight
		 	var scrollBottom = dh - dh2 - scrollTop;
		 	if(scrollBottom <= 160){

		 		// var animations = $api.dom(".animations");
		 		// $api.addCls(animations,'anima');
		 		$(".animations").addClass("anima");
                                                $(".animations").css("transform",'scale(1)').css("-webkit-transform",'scale(1)');
		 	}else{
		 		// $api.removeCls(animations,'anima');
		 		$(".animations").removeClass("anima");
                                                $(".animations").css("transform",'scale(0.9)').css("-webkit-transform",'scale(0.9)');
		 	}
		 }
	})
	
	/**
	 * 点击打开天天有钱页面
	 */
	var openHaveMoney=function(){
		api.openWin({
	        name: 'index_havemoney_header',
	        url: 'index/havemoney_header.html',
	        bgcolor:'#ffffff',
	        scrollToTop:true,
	        animation:{
	        	type:"movein",                //动画类型（详见动画类型常量）
			    subType:"from_right",       //动画子类型（详见动画子类型常量）
			    duration:150
	        }
        });
	}
</script>
