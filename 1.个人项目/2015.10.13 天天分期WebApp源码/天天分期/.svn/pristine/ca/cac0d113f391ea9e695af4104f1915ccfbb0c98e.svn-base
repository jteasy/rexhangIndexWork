<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>修改手势密码</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../../css/common.css" />
    <style>
        *{
            margin: 0;
            padding: 0;
        }
    	body{
    		font-size: 12px;
            font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
            background: #EAEAEC;
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;
            top: 0;
    	}
        .heads{
            width: 100%;
            background: #fff;
            margin-top: 10px;
            padding-top: 10px;
            padding-bottom: 10px;
        }
        .old_ps{
            height: 50px;
            margin: 0 20px;
            border: 1px solid #D8D8D8;
        	border-radius:5px;
        }
        input[name="oldps"]{
            outline: none;
            height: 50px;
            border: 0;
            padding-left: 14px;
            font-size: 14px;
        }
        .slide{
            height: 26px;
            width: 50px;
            border: 1px solid #E0D5D5;
            border-radius: 14px;
            float: right;
            margin-top: 12px;
            margin-right:10px;
        }
        .round{
            height: 25px;
            width: 25px;
            border-radius: 50%;
            display: block;
            box-shadow: 0 1px 3px 1px #928B8B;
            transition: 0.3s;
        }
        #btns{
             width: 100%;
             margin-top: 20px;
        }
        #btns .btn{
             height: 50px;
             margin: 0 20px;
             text-align: center;
             font-size: 18px;
             border-radius: 4px;
             background: #0DA4FF;
             color: #fff;
             line-height: 50px;
        }
        .isAdd{
            margin-left: 24px;
            background: #9DE83F;
        }
    </style>
</head>
<body>
	<div class="heads">
        <div class="old_ps">
            <input type="text" placeholder="输入6~20位旧密码" name="oldps" />
            <div class="slide">
                <span class="round" ></span>
            </div>
        </div>

        <div class="old_ps" style="margin-top:10px;">
            <input type="text" placeholder="输入6~20位新密码" name="oldps" />
            <div class="slide">
                <span class="round round2" ></span>
            </div>
        </div>
    </div>
    <!-- btn -->
    <div id="btns">
      <div class="btn">确定</div>
    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript">
	apiready = function(){
	    var rdDom = $api.dom(".round");
        var rdDom2 = $api.dom(".round2");
        // 开关1
        $api.addEvt(rdDom,'touchstart',function(){
            if($api.hasCls(rdDom, 'isAdd')){
                $api.removeCls(rdDom,  'isAdd');
            }else{
                $api.addCls(rdDom, 'isAdd');
            }
        });
        // 开关2
        $api.addEvt(rdDom2,'touchstart',function(){
            if($api.hasCls(rdDom2, 'isAdd')){
                $api.removeCls(rdDom2, 'isAdd');
            }else{
                $api.addCls(rdDom2, 'isAdd');
            }
        });	
	};
	
	var openWin=function($url){
		api.openWin({
	        name:$url,
	        url: $url+'_header.html',
	        bgcolor:"#ffffff",
	        scrollToTop:true,
	        animation:{
	        	type:'movein',
	        	subType:'from_right'
	        }
        });
	}
</script>
</html>