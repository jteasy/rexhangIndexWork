		$api.setStorage('borrow_amount',rangs);	//借款金额存储
		$api.setStorage('fqs',rangs_2);	//分期数存储
		api.openWin({
            name:'information',
            url: $url+'.html',
            bgcolor:"#ffffff",
            pageParam:{amount:rangs,fqs:rangs_2},
            scrollToTop:true,
            animation:{
                type:'movein',
                subType:'from_right',
                duration:300
            }
        });
	}
	/*
	 * 提交当前页面
	 */
	var submit=function(){
        //先判断本地偏好设置userid是否为空，如果不是空，那么就执行下面的判断
        api.getPrefs({
            key: 'userid'
        }, function(ret, err){
            if ( ret.value === '' ) {
                api.openWin({
                    name: 'login',
                    url: '../login.html',
                    animation:{
                        type:'movein',
                        subType:'from_right',
                        duration:300
                    }
                });
                
            }
            else {
                //如果userid不为空，那么执行下面流程：
                if(api.connectionType=='none'){
                    api.toast({
                        msg:'网络连接错误，等会儿吧！',
                        location:'middle'
                    });
                }else if($api.getStorage('baseinfo')==null || $api.getStorage('baseinfo')==''){
                    api.toast({
                        msg:'网络连接错误，等会儿吧！',
                        location:'middle'
                    });
                }else{
                   openWin('information_header');
                }
                
            }
        });
		
	}
</script>
</html>